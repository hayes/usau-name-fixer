{
  "manifest_version": 3,
  "name": "USAU Team Name Fixer",
  "version": "1.0.1",
  "description": "Reverts \"Rhino Slam!\" name change and adds Urban Dictionary hover cards for all team names",
  "content_scripts": [
    {
      "matches": ["https://play.usaultimate.org/*"],
      "js": ["src/content.js"],
      "css": ["src/styles.css"]
    }
  ],
  "icons": {
    "16": "src/icons/icon16.png",
    "48": "src/icons/icon48.png",
    "128": "src/icons/icon128.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "usau-name-fixer@hayes.github.io",
      "strict_min_version": "109.0",
      "data_collection_permissions": {
        "required": ["none"]
      }
    }
  }
}
